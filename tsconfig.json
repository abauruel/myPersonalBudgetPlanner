{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"baseUrl": "./src",
		"outDir": "./dist",
		"rootDir": "./",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"paths": {
			"@modules/*": [
				"modules/*"
			],
			"@shared/*": [
				"shared/*"
			]
		}
	}
}